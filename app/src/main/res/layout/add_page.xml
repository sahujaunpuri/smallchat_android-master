<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="10dip"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/application_search_title_bg_color"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp" >

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/searchbtn"
                        android:background="@drawable/yuan_edit_bg"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:singleLine="true"
                        android:textColorHint="@color/gray"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/searchbtn"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:visibility="visible" >

                      	<TextView
                      	    android:layout_width="wrap_content"
                      	    android:layout_height="wrap_content"
                      	    android:layout_centerVertical="true"
                      	    android:layout_centerHorizontal="true"
                      	    android:gravity="center_vertical"
                      	    android:text="@string/search"
                      	    android:textColor="@color/white"
                      	    android:textSize="@dimen/eight" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/findlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_last_select_item_btn"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="5dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/search_icon"
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="25dip"
                        android:background="@drawable/add_search"
                        android:contentDescription="@string/desc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/search_icon"
                        android:text="搜号码"
                        android:textColor="@color/font_color"
                        android:textSize="@dimen/chat_user_name_text_size" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/add_contact_friend_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="8dip" >

                    <ImageView
                        android:id="@+id/upload_img"
                        android:layout_width="35dip"
                        android:layout_height="40dip"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="25dip"
                        android:background="@drawable/add_contact"
                        android:contentDescription="@string/desc"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/upload_img"
                        android:text="@string/contact_add_mobile_friend"
                        android:textColor="@color/application_black"
                        android:textSize="@dimen/chat_user_name_text_size" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/add_other_friend_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="8dip" >

                    <ImageView
                        android:id="@+id/add_other_friend_layout_image"
                        android:layout_width="35dip"
                        android:layout_height="40dip"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="25dip"
                        android:background="@drawable/add_wechat_friend"
                        android:contentDescription="@string/desc"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/add_other_friend_layout_image"
                        android:text="@string/invite_other_friend"
                        android:textColor="@color/application_black"
                        android:textSize="@dimen/chat_user_name_text_size" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/splite"
                    android:contentDescription="@string/desc"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/order_num"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="5dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/comment_account_img"
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="25dip"
                        android:background="@drawable/add_order"
                        android:contentDescription="@string/desc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/comment_account_img"
                        android:text="查找公众账号"
                        android:textColor="@color/font_color"
                        android:textSize="@dimen/chat_user_name_text_size" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/splite"
                    android:contentDescription="@string/desc"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/add_friends"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_last_select_item_btn"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="5dip"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/order_icon"
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="25dip"
                        android:background="@drawable/add_press"
                        android:contentDescription="@string/desc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/order_icon"
                        android:text="一起按，加朋友"
                        android:textColor="@color/font_color"
                        android:textSize="@dimen/chat_user_name_text_size" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/scanlayout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/settting_item_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/order_list_selector" >

            <ImageView
                android:id="@+id/qr_code_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/qr_code_icon" />

            <TextView
                android:id="@+id/scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/qr_code_icon"
                android:text=""
                android:textColor="@color/order_title_color"
                android:textSize="@dimen/setting_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/desc" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grouplayout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/settting_item_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/order_list_selector" >

            <ImageView
                android:id="@+id/add_group_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:contentDescription="@string/desc"
                android:src="@null" />

            <TextView
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/add_group_icon"
                android:text=""
                android:textColor="@color/order_title_color"
                android:textSize="@dimen/setting_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/desc" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>