<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mine_profile"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="@dimen/list_margin"
        android:layout_marginBottom="@dimen/list_space_v"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/list_margin_h"
        android:paddingRight="@dimen/list_margin_h"
        >
        <ImageView
            android:id="@+id/mine_avatar"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/contact_default_header" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mine_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/mine_profile_qrcode"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mine_qrcode" />
    </LinearLayout>
</LinearLayout>

