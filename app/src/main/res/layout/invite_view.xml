<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:layout_margin="10dip"
                android:gravity="center_vertical"
                android:background="@drawable/yuan_edit_bg" >

                <RelativeLayout
                    android:id="@+id/head_layout"
                    android:layout_marginLeft="10dip"
                    android:layout_width="60dip"
                    android:layout_height="60dip" >

                    <ImageView
                        android:id="@+id/user_icon"
                        android:layout_marginBottom="3dip"
                        android:layout_marginRight="3dip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/contact_default_header" />
                   
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:layout_toRightOf="@+id/head_layout"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/application_black"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text=""
                        android:textColor="@color/application_deep_gray_black"
                        android:textSize="@dimen/forteen" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="40dip"
                android:text="@string/invit_hint"
                android:textColor="@color/application_black"
                android:textSize="@dimen/forteen" />

            <Button
                android:id="@+id/invite"
                android:layout_width="fill_parent"
                android:layout_height="38dip"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="80dip"
                android:background="@drawable/red_btn"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:text="发送邀请"
                android:textColor="@color/white"
                android:textSize="@dimen/eight" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>