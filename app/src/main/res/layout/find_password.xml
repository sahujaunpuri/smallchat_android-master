<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/title_layout"
        android:id="@+id/title_layout"/>
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:padding="10dip">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            >
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <EditText
                android:id="@+id/find_pwd_phone_or_email"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/cirle_edit_bg"
                android:gravity="center_vertical"
                android:hint="@string/please_input_your_phone_or_email"
                android:inputType="text"
                android:padding="5dip"
                android:textColor="@color/editor_text_color"
                android:textColorHighlight="@color/editor_text_color" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <EditText
                    android:id="@+id/find_pwd_code"
                    android:layout_width="150dip"
                    android:layout_height="40dip"

                    android:hint="验证码"
                    android:inputType="text"
                    android:gravity="center_vertical"
                    android:padding="5dip"
                    android:textColorHighlight="@color/editor_text_color"
                    android:textColor="@color/editor_text_color"
                    android:background="@drawable/cirle_edit_bg"/>

                <Button
                    android:id="@+id/btn_get_code"
                    android:layout_width="150dip"
                    android:layout_height="45dip"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/login_btn"
                    android:text="@string/get_valid_code"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/ok_btn"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="50dip"
                android:background="@drawable/login_btn"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
