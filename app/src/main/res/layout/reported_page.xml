<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    android:orientation="vertical" >

  

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/reported"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/setting_corners_bg"
                android:gravity="top"
                android:hint=""
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColorHint="@color/text_color"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_hint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:text="@string/reported_order_hint"
                android:textColor="@color/font_color"
                android:textSize="@dimen/eight" />

            <TextView
                android:id="@+id/select_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="10dip"
                android:text="@string/select_reported_type"
                android:textColor="@color/editor_hint_color"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/reported_type_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/double_splite"
                android:orientation="vertical" >
			
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>