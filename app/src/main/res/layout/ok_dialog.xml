<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ok_dialog_corners_bg"
        android:minWidth="200dip"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:id="@+id/card_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:padding="10dip"
            android:text="谢谢您的反馈!"
            android:textColor="@color/application_deep_gray_black"
            android:textSize="@dimen/eight" />

        <EditText
            android:id="@+id/reason_edit"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_margin="15dip"
            android:background="@drawable/cirle_edit_bg"
            android:hint="@string/please_input_request_reason_hint"
            android:padding="10dip"
            android:singleLine="true"
            android:textColor="@color/application_black"
            android:textColorHighlight="@color/application_deep_gray_black"
            android:textSize="@dimen/sixteen"
            android:visibility="gone" />

        <Button
            android:id="@+id/no"
            android:layout_width="120dip"
            android:layout_marginTop="20dip"
            android:layout_height="40dip"
            android:background="@drawable/ok_dialog_ok_bg"
            android:text="@string/ok"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/eight" />
    </LinearLayout>

</LinearLayout>