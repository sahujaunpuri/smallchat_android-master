<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   	android:padding="10dip">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/dialog_bg" 
         android:minWidth="300dip"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/card_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dip"
            android:padding="10dip"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/eight"
            android:text=""/>
        <EditText 
            android:id="@+id/reason_edit"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:padding="10dip"
            android:layout_margin="15dip"
            android:background="@drawable/cirle_edit_bg"
            android:singleLine="true"
            android:hint="@string/please_input_request_reason_hint"
            android:textColorHighlight="@color/application_deep_gray_black"
            android:textColor="@color/application_black"
            android:visibility="gone"
            android:textSize="@dimen/sixteen"/>
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:contentDescription="@string/desc"
            android:background="@drawable/dialog_h_splite"/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/no"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:textColor="@color/white"
                android:textSize="@dimen/eight"
                android:background="@drawable/dialog_cancle_btn"
                android:layout_weight="1.0"
                android:text="取消"/>
            <View 
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@drawable/dialog_s_splite"/>
             <Button 
                android:id="@+id/yes"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@drawable/dialog_ok_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/eight"
                android:layout_weight="1.0"
                android:text="删除"/>
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
